[
  {
    "defaults": {
      "link": {
        "relink": true,
        "force": true 
      }
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      {
        "command": "bash ./setup.sh",
        "stdout": true
      }
    ]
  },
  {
    "link": {
      "~/.gitconfig": "./git/gitconfig",
      "~/.pylintrc": "./pylint/pylintrc",
      "~/.gitignore": "./git/gitignore",
      "~/.zshrc": "./zsh/zshrc",
      "~/.byobu/.tmux.conf": {
        "path": "tmux.conf",
        "create": true
      },
      "~/.local/share/konsole":  {
        "if": "[ `uname` = Linux ]",
        "path": "./konsole"
      },
      "~/.ssh/config":  {
        "path": "./ssh/config"
      }
    }
  }
]
