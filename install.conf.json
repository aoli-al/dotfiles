[
  {
    "defaults": {
      "link": {
        "relink": true,
        "force": true 
      }
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["sh -c \"$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)\"", "Installing oh-my-zsh"],
      ["curl -sLf https://spacevim.org/install.sh | bash", "Installing SpaceVim"],
      ["pip3 install --user pylint yapf autoflake flake8 pyflakes", "Installing Python Dependencies"]
    ]
  },
  {
    "link": {
      "~/.gitconfig": "./git/gitconfig",
      "~/.gitignore": "./git/gitignore",
      "~/.zshrc": "./zsh/zshrc",
      "~/.SpaceVim.d/init.toml": "./spacevim/init.toml",
      "~/.SpaceVim.d/autoload/neomake_python_config.vim": {
        "path": "./spacevim/neomake_python_config.vim",
        "create": true
      },
      "~/.byobu/.tmux.conf": "tmux.conf",
      "~/.local/share/konsole":  {
        "if": "[ `uname` = Linux ]",
        "path": "./konsole"
      },
      "~/.ssh/config":  {
        "path": "./ssh/config"
      }
    }
  }
]
